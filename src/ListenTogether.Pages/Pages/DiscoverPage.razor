@page "/discover"
@using ListenTogether.Data;
@inherits MyComponentBase

@inject NavigationManager NavigationManager
@inject ISearchHistoryStorage SearchHistoryStorage

<MudHidden Breakpoint="Breakpoint.SmAndUp">
    <SearchLabel />
</MudHidden>
<MudTabs Rounded="true"
         MinimumTabWidth="150"
         PanelClass="mt-3">
    <MudTabPanel Text="@(PlatformEnum.MiGu.GetDescription())">
        <Discover Platform="PlatformEnum.MiGu" />
    </MudTabPanel>
    <MudTabPanel Text="@(PlatformEnum.KuWo.GetDescription())">
        <Discover Platform="PlatformEnum.KuWo" />
    </MudTabPanel>
    <MudTabPanel Text="@(PlatformEnum.NetEase.GetDescription())">
        <Discover Platform="PlatformEnum.NetEase" />
    </MudTabPanel>
</MudTabs>

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
    private void GotoSearchPage()
    {
        NavigationManager.NavigateTo("/search");
    }
}
