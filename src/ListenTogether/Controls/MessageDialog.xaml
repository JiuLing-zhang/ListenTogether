<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:hc="clr-namespace:ListenTogether.HandCursorControls"
               x:Class="ListenTogether.Controls.MessageDialog"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Size="300,150">

    <Grid
        RowDefinitions="*,Auto"
        BackgroundColor="{AppThemeBinding Dark={StaticResource DarkBackground},Light={StaticResource LightBackground}}"
        Padding="20">
        <Label
            Grid.Row="0"
            x:Name="LblMessage"
            HorizontalOptions="CenterAndExpand"/>
        <hc:HandCursorButton
            Grid.Row="1"
            Text="确定"
            Clicked="BtnClose_Clicked"/>
    </Grid>
</toolkit:Popup>