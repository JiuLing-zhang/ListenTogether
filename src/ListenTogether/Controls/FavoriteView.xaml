<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ListenTogether.Controls.FavoriteView"
    x:Name="self">
    <Image
        x:Name="ImgFavorite"
        Source="{AppThemeBinding Light=add_to_favorite.png,Dark=add_to_favorite_dark.png}"
        Aspect="AspectFill"
        ToolTipProperties.Text="添加到我的歌单">
        <Image.GestureRecognizers>
            <TapGestureRecognizer Tapped="Favorite_Tapped"/>
        </Image.GestureRecognizers>
    </Image>
</ContentView>
